<!DOCTYPE html>
<html lang="en">

    @await Html.PartialAsync("~/Views/Partials/_Header.cshtml")

<body>

    @await Html.PartialAsync("~/Views/Partials/_Menu.cshtml")

    <div class="container">
        @await Html.PartialAsync("~/Views/Partials/_StatusMessage.cshtml", TempData["StatusMessage"])
        <!-- Breadcrumb -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="bg-white shadow border-0 rounded border-light p-4">
                    @await Html.PartialAsync("~/Views/Partials/_Breadcrumbs.cshtml")

                </div>
            </div>
        </div>
        <!-- Errors -->
        @if (!Html.ViewData.ModelState.IsValid)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="bg-white shadow border-0 rounded border-light p-4">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }
        <!-- Content -->
        <div class="row">
            <div class="col-12">
                <div class="bg-white shadow border-0 rounded border-light p-4">
                    <div class="row">
                        <div class="col-10">
                            <h3>@ViewData["Title"]</h3>
                        </div>
                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Partials/_Footer.cshtml")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>