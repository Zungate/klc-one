@model klc_one.Areas.FoodPlan.Models.ShoppingList

@{
    ViewData["Title"] = "Tilføj ingredients til indkøbsseddel";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Ingrediens</label>
                <input asp-for="Name" class="form-control" list="Ingredients" />
                <datalist id="Ingredients">
                    @foreach (var item in ViewBag.Ingredients)
                    {
                        <option value="@item.Name">@item.Name</option>
                    }
                </datalist>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <select asp-for="Unit" class="form-control" asp-items="ViewBag.Units"></select>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" asp-items="ViewBag.CategoryForIngredientID"></select>
            </div>

            @await Html.PartialAsync("~/Views/Partials/Forms/_CreateSubmit.cshtml")
        </form>
    </div>
    <div class="col-md-4">
        <a asp-action="Create" asp-controller="Ingredients" class="btn btn-primary">Tilføj ny ingrediens</a>
    </div>
</div>


