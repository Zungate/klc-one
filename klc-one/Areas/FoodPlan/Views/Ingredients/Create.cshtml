@model klc_one.Areas.FoodPlan.Models.Ingredient

@{
    ViewData["Title"] = "Opret ingrediens";
}

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryForIngredientID" class="control-label"></label>
                <select asp-for="CategoryForIngredientID" class="form-control" asp-items="ViewBag.CategoryForIngredientID"></select>
            </div>

            @await Html.PartialAsync("~/Views/Partials/Forms/_CreateSubmit.cshtml")
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}