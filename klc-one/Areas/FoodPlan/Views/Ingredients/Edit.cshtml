@model klc_one.Areas.FoodPlan.Models.Ingredient

@{
    ViewData["Title"] = $"Rediger: {Model.Name}";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryForIngredientID" class="control-label"></label>
                <select asp-for="CategoryForIngredientID" class="form-control" asp-items="ViewBag.CategoryForIngredientID"></select>
                <span asp-validation-for="CategoryForIngredientID" class="text-danger"></span>
            </div>

            @await Html.PartialAsync("~/Views/Partials/Forms/_EditSubmit.cshtml")
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}