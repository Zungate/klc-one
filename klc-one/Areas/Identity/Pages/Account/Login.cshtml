@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Form -->
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <!-- Form Group-->
    <div class="form-group mb-4">
        <label asp-for="Input.Email"></label>
        <div class="input-group">
            <span class="input-group-text" id="basic-addon1">
                <i class="feather-16" data-feather="mail"></i>
            </span>
            <input asp-for="Input.Email" class="form-control" placeholder="Email@domain.com" autofocus />
        </div>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <!-- Form Group-->
    <div class="form-group mb-4">
        <label asp-for="Input.Password"></label>
        <div class="input-group">
            <span class="input-group-text" id="basic-addon1">
                <i class="feather-16" data-feather="lock"></i>
            </span>
            <input asp-for="Input.Password" class="form-control" />
        </div>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-gray-800">Sign in</button>
    </div>
</form>
<!-- External Logins-->
<div class="mt-3 mb-4 text-center">
    <span class="fw-normal">or login with</span>
</div>
<div class="d-flex justify-content-center my-4">
    @await Html.PartialAsync("~/Views/Partials/_ExternalLogins.cshtml")
</div>
<!-- Register -->
<div class="d-flex justify-content-center align-items-center mt-4">
    <span class="fw-normal">
        Not registered?
        <a href="/Identity/Account/Register" class="fw-bold">Create account</a>
    </span>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
